<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myFilesOffline"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp" >

    <TextView
        android:id="@+id/myOfflineFileName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:ellipsize="marquee"
        android:lines="1"
        android:paddingBottom="10dp"
        android:paddingTop="12dp"
        android:textColor="@color/overWhite"
        android:textSize="18dp" >
    </TextView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/myOfflineFileDetails"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="left"
            android:text="22 MB, 26/12/2012 07:44 PM"
            android:textColor="@color/overWhiteLighter"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <Button
                android:id="@+id/myOfflineFileDeleteButton"
                android:layout_width="60dp"
                android:layout_height="22dp"
                android:layout_marginRight="10dp"
                android:background="@color/buttonRed"
                android:paddingTop="2dp"
                android:text="Delete"
                android:textColor="@color/white"
                android:textSize="9dp" />

            <Button
                android:id="@+id/myOfflineFileOpenButton"
                android:layout_width="60dp"
                android:layout_height="22dp"
                android:background="@color/buttonBlue"
                android:paddingTop="2dp"
                android:text="Open"
                android:textColor="@color/white"
                android:textSize="9dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>