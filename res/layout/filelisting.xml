<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabHost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TabWidget
        android:id="@android:id/tabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" />

    <FrameLayout
        android:id="@android:id/tabcontent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/resourcesFileList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingTop="50dp" >

            <LinearLayout
                android:id="@+id/linearLayoutLoadingResourses"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/activityBackground"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/linearLayoutLoadingProgressTextResourses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/linearLayoutLoadingText"
                    android:textSize="15dp"
                    android:textColor="@color/overBackground" />

                <ProgressBar
                    android:id="@+id/linearLayoutLoadingProgressImageResourses"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:color="@color/overBackground" />
            </LinearLayout>

            <ListView
                android:id="@+id/myFilesResources"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/activityBackground"
                android:cacheColorHint="#00000000"
                android:divider="@color/activityBackground"
                android:dividerHeight="0.8dp"
                android:fadingEdgeLength="1dp"
                android:fastScrollEnabled="true"
                android:orientation="vertical" >
            </ListView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forumsFileList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingTop="50dp" >

            <LinearLayout
                android:id="@+id/linearLayoutLoadingForums"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/activityBackground"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/linearLayoutLoadingProgressTextForums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/linearLayoutLoadingText"
                    android:textColor="@color/overBackground" />

                <ProgressBar
                    android:id="@+id/linearLayoutLoadingProgressImageForums"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ListView
                android:id="@+id/myFilesForums"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/activityBackground"
                android:cacheColorHint="#00000000"
                android:divider="@color/activityBackground"
                android:dividerHeight="0.8dp"
                android:fadingEdgeLength="1dp"
                android:fastScrollEnabled="true"
                android:orientation="vertical" >
            </ListView>
        </LinearLayout>
    </FrameLayout>

</TabHost>