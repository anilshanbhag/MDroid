<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/activityBackground" >

    <LinearLayout
        android:id="@+id/linearLayoutLoadingDiscussThread"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/linearLayoutLoadingText"
            android:textColor="@color/overBackground"
            android:textSize="15sp" />

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:color="@color/overBackground" />
    </LinearLayout>

    <ListView
        android:id="@+id/forumsDiscussThread"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/activityBackground"
        android:cacheColorHint="#00000000"
        android:divider="#9aa0a0"
        android:dividerHeight="0.8dp"
        android:fadingEdgeLength="1dp"
        android:fastScrollEnabled="true"
        android:orientation="vertical" >
    </ListView>

</LinearLayout>
