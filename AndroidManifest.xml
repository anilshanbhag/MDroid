<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.exzalt.mdroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:theme="@style/Theme.MDroid" >
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="CourseListing"
            android:configChanges="orientation"
            android:label="Moodle Course listing" >
        </activity>
        <activity
            android:name="NeedSelection"
            android:configChanges="orientation"
            android:label="Moodle file forums selection" >
        </activity>
        <activity
            android:name="FileListing"
            android:configChanges="orientation"
            android:label="Moodle Course file listing" >
        </activity>
        <activity
            android:name="Forums"
            android:configChanges="orientation"
            android:label="Moodle Course forums listing" >
        </activity>
        <activity
            android:name="ForumDiscussThread"
            android:configChanges="orientation"
            android:label="Moodle forums discussion thread" >
        </activity>
        <activity
            android:name="UserOfflineFolderListing"
            android:configChanges="orientation"
            android:label="Offline course listing" >
        </activity>
        <activity
            android:name="UserOfflineFileListing"
            android:configChanges="orientation"
            android:label="Offline file listing" >
        </activity>
        <activity
            android:name="TimeLine"
            android:configChanges="orientation"
            android:label="TimeLine" >
        </activity>
    </application>

</manifest>